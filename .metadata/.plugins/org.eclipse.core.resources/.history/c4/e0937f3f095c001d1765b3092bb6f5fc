	    public static List<Boolean> kidsWithCandies(int[] candies, int extraCandies) {
	        
	       //Arrays.sort(candies);
	        int s = candies.length;
	       List<Boolean> ans = new ArrayList<>(s);
	        //boolean[] ans = new boolean[s];
	        
	        for(int i =0; i< candies.length; i++)
	        {
	            int c = candies[i];
	            int check = c+extraCandies;
	          // System.out.println("check:" + check);
	          // System.out.print(" candies[i]:" + candies[i]);
	           for(int j=0; j<candies.length; j++)
	           {
	               System.out.println("yo");
	        	   if(check > candies[j])
	               {
	            	   System.out.println("i: "+ i+ "j:" + candies[j] + " check: "+ check);
	                   ans.set(i,true);
	                   System.out.println("ans: " + ans.get(i));
	               }
	               else
	               {
	            	   ans.set(i,false);
	                   
	               }
	               
	           }
	            
	        }
	        return ans;
	        
	        
	    }

}
